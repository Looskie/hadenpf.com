---
export interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle }: Props = Astro.props
---

<header>
	<h1>{title}</h1>
	{subtitle && (
		<span>{subtitle}</span>
	)}
</header>

<style lang="scss">
	header {
		display: flex;

		margin: 52px 0 24px 0;
		padding-bottom: 24px;
		border-bottom: 2px solid #e9e9e9;

		flex-flow: column nowrap;
		position: sticky;
		top: 0;

		@media print {
			margin-top: 36px;
		}

		// background: linear-gradient(180deg,
		//         rgba(var(--background-color-rgb), 1) 20px,
		//         rgba(var(--background-color-rgb), .5) 95%,
		//         rgba(var(--background-color-rgb), 0)
		// );
		background: rgba(var(--background-color-rgb), 0.8);
		backdrop-filter: blur(15px);

		h1 {
			margin: 0 0 4pt 0;

			font-weight: 600;
			font-size: 3rem;
			line-height: 1.15;
		}

		small {
			margin-top: 10px;

			font-weight: 400;
			font-size: 10pt;
			line-height: 12pt;
		}
	}
</style>
