---
export interface Props {
	title: string
	subtitle: string
	featured?: boolean

	image?: string
}

import Headline from '$atoms/Headline'
import Icon from '$atoms/Icon.astro'

const { title, subtitle, featured = false, image = '/avi.png' } = Astro.props
---

<div
	style={{
		backgroundImage: `url('${image}')`,
	}}
	class="displayCard"
>
	<Headline small noSpacing title={title} subtitle={subtitle} />
	<Icon name="chevron-right" />
</div>

<style lang="scss">
.displayCard {
	--primary-a: #fff;
	--secondary-b: rgba(255, 255, 255, 0.7);

	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	align-items: flex-start;
	padding: 24px;

	width: calc(100% + (2 * var(--content-inset)));
	margin-left: calc(-1 * var(--content-inset));
	margin-right: calc(-1 * var(--content-inset));

	background-color: black;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	color: white;
	height: 294px;

	padding: 18px;
	padding-left: 24px;

	margin-top: 18px;
}
</style>
