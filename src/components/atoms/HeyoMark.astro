---
export interface Props extends SVGElement {
	thickness?: null | 'thick' | 'thin';
	height?: number;
	alt?: string;
	primary?: boolean;
	id: string;
}

const {
	height = 33,
	primary = false,
	thickness = primary ? null : 'thin',
	alt = "Heyo, written in cursive",
	id,
	...attrs
} = Astro.props as Props

const
	width = height * 1.8, // (calculated from input value: WxH = 56x31 --> 56/31 ‚ãç 1.80)
	strokeWidth =
		thickness ?
			(thickness === 'thick' && 3) ||
			(thickness === 'thin' && 2)
			: 2.5

const LABELS = {
	title: `${id}.title`
}
---

<svg
	id={id}
	data-ignore-this=""
	class={primary ? 'primary' : 'secondary'}
	aria-labelledby={LABELS.title}
	role="img"

	width={width}
	height={height}
	viewBox="0 0 56.6 31"
	xmlns="http://www.w3.org/2000/svg"
	{...attrs}
>
	<title
		id={LABELS.title}
		data-ignore-this=""
	>
		{alt}
	</title>

