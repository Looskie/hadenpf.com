---
export interface Props {
	items: Array<{
		text: string;
		link: string;
		target?: string;
	}>;
}

const { items }: Props = Astro.props
---

<nav id="main-navigation">
	<ul>
		{items.map((item) => (
			<li>
				<a href={item.link} target={item.target}>
					{item.text}
				</a>
			</li>
		))}
	</ul>
</nav>

<style lang="scss">
	ul {
		flex: 0 0;

		display: flex;
		flex-flow: row nowrap;

		list-style: none;
		padding: 0;
		margin: 0;

		li {
			font-size: 12pt;
			font-weight: 500;
			line-height: 16pt;

			&:not(:last-child) {
				margin-right: 24px;
			}

			a {
				text-decoration-color: #0086ff;
			}
		}
	}
</style>
